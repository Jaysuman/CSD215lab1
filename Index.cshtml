@page
@model ScientificCalculatorWebApp.Pages.IndexModel
@{
    ViewData["Title"] = "Scientific Calculator";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #6e8efb, #a777e3);
        }

        .calculator-container {
            width: 500px; /* Adjusted width */
            height: 500px; /* Increased height to fit the result box */
            padding: 20px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
            backdrop-filter: blur(4px);
            border: 1px solid rgba(255, 255, 255, 0.18);
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* Ensure result box is at the bottom */
        }

        h2 {
            text-align: center;
            color: #4a4a4a;
            margin: 0 0 20px 0; /* Increased margin for spacing */
            font-size: 1.5em; /* Increased font size */
        }

        form {
            display: grid;
            gap: 8px;
            flex-grow: 1; /* Allows the form to take up available space */
        }

        input[type="text"] {
            width: 100%;
            padding: 10px; /* Increased padding */
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px; /* Increased font size */
            box-sizing: border-box;
        }

        button {
            width: 100%;
            padding: 10px; /* Increased padding */
            border: none;
            border-radius: 4px;
            font-size: 16px; /* Increased font size */
            color: #fff;
            background-color: #6e8efb;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.1s ease;
        }

        button:hover {
            background-color: #5c7cfa;
            transform: translateY(-2px);
        }

        button:active {
            transform: translateY(0);
        }

        label {
            font-size: 16px; /* Increased font size */
            color: #4a4a4a;
            text-align: center; /* Centered text */
            padding: 10px; /* Added padding */
            background-color: #f5f5f5; /* Light background for contrast */
            border-radius: 4px;
            border: 1px solid #ddd;
        }

        hr {
            margin: 20px 0; /* Increased margin for spacing */
            border: none;
            height: 1px;
            background-color: #ddd;
        }

        .result {
            font-weight: bold;
            color: #6e8efb;
            margin-top: 10px; /* Increased margin */
            text-align: center; /* Centered text */
        }

        .button-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 8px;
        }
    </style>
</head>
<body>
    <div class="calculator-container">
        <h2>Scientific Calculator</h2>
        <form method="post">
            <input type="text" id="FirstNumber" name="FirstNumber" placeholder="First Number" />
            <input type="text" id="SecondNumber" name="SecondNumber" placeholder="Second Number" />
            <div class="button-grid">
                <button type="submit" name="operation" value="square">Square</button>
                <button type="submit" name="operation" value="cube">Cube</button>
                <button type="submit" name="operation" value="power">Power</button>
                <button type="submit" name="operation" value="add">Add</button>
                <button type="submit" name="operation" value="subtract">Subtract</button>
                <button type="submit" name="operation" value="multiply">Multiply</button>
                <button type="submit" name="operation" value="divide">Divide</button>
            </div>
            <hr />
            <div class="result">Result: @Model.Result</div>
        </form>
    </div>
</body>
</html>
